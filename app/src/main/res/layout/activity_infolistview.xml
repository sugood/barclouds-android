<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue" >

        <ImageButton
            android:id="@+id/imagebutton_setting"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_city"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/diary_title_icon_setting" />

        <TextView
            android:id="@+id/textview_diary"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/imagebutton_setting"
            android:gravity="center_vertical"
            android:background="@color/blue"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="资料浏览"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imagebutton_refresh"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_city"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/diary_title_icon_refresh" />

        <ImageButton
            android:id="@+id/imagebutton_search"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toLeftOf="@id/imagebutton_refresh"
            android:background="@drawable/button_city"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/diary_title_icon_search" />
        <ImageButton
            android:id="@+id/imagebutton_delete"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toLeftOf="@id/imagebutton_search"
            android:background="@drawable/button_city"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/diary_title_icon_delete" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewFiled0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/result_points"
            android:text="A区" />

        <com.barclouds.views.ui.InfoScrollView2
            android:id="@+id/item_scroll_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/textViewFiled1"
                    android:text="B区1"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:textColor="#850"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled2"
                    android:text="B区2"
                    android:layout_width="100dip"
                    android:layout_height="fill_parent"
                    android:textColor="#850"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled3"
                    android:text="B区3"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled4"
                    android:text="B区4"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled5"
                    android:text="B区5"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled6"
                    android:text="B区6"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled7"
                    android:text="B区7"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled8"
                    android:text="B区8"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textViewFiled9"
                    android:text="B区9"
                    android:layout_width="100dip"
                    android:textColor="#850"
                    android:layout_height="fill_parent"
                    android:gravity="center" />
            </LinearLayout>
        </com.barclouds.views.ui.InfoScrollView2>
    </LinearLayout>

    <ListView
        android:id="@+id/hlistview_scroll_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:footerDividersEnabled="false" >
    </ListView>

</LinearLayout>